-# Inline script required to load minicolors() without refresh
:javascript
  $('.color-picker').minicolors()
= form_for [@portfolio, @portfolio_header] do |f|
  .form-portfolio-header
    .field
      = f.label :header_one
      %br
      = f.text_field :header_one
    .field
      = f.label :header_one_font_color
      %br
      = f.text_field :header_one_color, as: :minicolors, class: 'color-picker'
    .field
      = f.label :header_two
      %br
      = f.text_field :header_two
    .field
      = f.label :header_two_font_color
      %br
      = f.text_field :header_two_color, as: :minicolors, class: 'color-picker'
    .field.upload-image
      = f.label :cover_image
      %small Prefered resolution 1290x800 (12:5 aspect ratio)
      %br
      = f.file_field :cover_image, class: 'form-project-image'
    .field.upload-image
      = f.label :avatar_image
      %small Prefered resolution 225x300 (3:4 aspect ratio)
      %br
      = f.file_field :avatar_image, class: 'form-project-image'
    .actions
      = f.submit 'Update Your Portfolio Header'
