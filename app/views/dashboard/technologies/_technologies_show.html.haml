.technologies-show-main-container
  .technology-header
    Technology
  .years-exp-header
    Years Exp
  .proficiency-header
    Proficiency
  .edit-delete-header
    Edit/Delete
  - @technologies.each do |technology|
    .show-name
      = technology.name
    .show-years-exp
      - if technology.show_years_exp
        = technology.years_exp
      - else
        Display Off
    .show-proficiency
      - if technology.show_proficiency
        .progress
          .progress-bar.bg-warning{ role: 'progressbar',
                                    'aria-valuemin' => '0', 'aria-valuemax' => '10',
                                    style: "width: #{technology.proficiency * 10}%" }
      - else
        Display Off
    .edit-delete-technology
      = link_to dashboard_index_path(menu_action: 'technologies', technology_id: technology.id) do
        .technology-edit-icon
      = link_to portfolio_technology_path(@portfolio.id, technology.id), method: :delete do
        .technology-delete-icon
